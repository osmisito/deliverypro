<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oscarfernandez.deliverypro.activity.MenuActivity">

    <Button
        android:id="@+id/btnRutas"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:text="Rutas"
        android:background="@drawable/button_rounded"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnRendicion"
        android:layout_marginBottom="60dp"/>

    <Button
        android:id="@+id/btnRendicion"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Rendición Manual"
        android:background="@drawable/button_rounded"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="248dp"/>

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rounded"
        android:text="Cerrar Sesión"
        android:textColor="#ffffff"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/btnRendicion"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.481"/>

</android.support.constraint.ConstraintLayout>
